
@{
    ViewBag.Title = "Confirmed";
}

<div class="row" style="margin-top: 12em">
    <div class="col text-center">
        <h1>Your message has been sent!</h1>
    </div>
</div>
<div class="row" style="margin-top: 5em;">
    <div class="col text-center">
        <h3>I will get back to you as soon as possible.</h3>
    </div>
</div>
<div class="row" style="margin-top: 5em; padding-bottom:12em;">
    <div class="col text-center">
        <h5>You will be redirected to the homepage in <span id="countdown">11</span></h5>
    </div>
</div>
@Html.ActionLink(" ", "Index", "Home", null, new { display="none", @class="className"})
<script type="text/javascript">

    var seconds = 11;

    function countdown() {
        seconds = seconds - 1;
        if (seconds < 0) {
            $(function () {                window.location.href = $('.className').attr('href');            });
        } else {
            document.getElementById("countdown").innerHTML = seconds;
            window.setTimeout("countdown()", 1000);
        }
    }

    countdown();

</script>

