@using Microsoft.AspNet.Identity
@model Coop_Blog.Models.ApplicationUser
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Index","Manage",new { title="Manage" })>@Html.ViewData.Model.DisplayName</a>
        </li>
        <li class="nav-item"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right work">
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Register","Account",new { title="Manage" })">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Login","Account",new { title="Manage" })">Log In</a>
    </li>
</ul>
}
